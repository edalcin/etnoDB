<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> - etnoDB</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/curation/list.css">
</head>
<body class="min-h-screen bg-gray-50">

  <!-- Header -->
  <header class="bg-forest-700 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <h1 class="text-2xl font-bold"><%= contextName %></h1>
      <p class="text-forest-100 text-sm"><%= contextDescription %></p>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">

    <!-- Success Message -->
    <% if (success) { %>
      <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
        <p class="text-green-800">✓ Referência atualizada com sucesso!</p>
      </div>
    <% } %>

    <!-- Error Message -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
        <p class="text-red-800"><%= error %></p>
      </div>
    <% } %>

    <!-- Status Filter -->
    <section class="card mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Filtrar por Status</h2>

      <div class="flex flex-wrap gap-3">
        <a
          href="/?status=all"
          class="filter-btn <%= statusFilter === 'all' ? 'filter-btn-active' : '' %>"
        >
          Todos
        </a>
        <a
          href="/?status=pending"
          class="filter-btn <%= statusFilter === 'pending' ? 'filter-btn-active' : '' %>"
        >
          Pendentes
        </a>
        <a
          href="/?status=approved"
          class="filter-btn <%= statusFilter === 'approved' ? 'filter-btn-active' : '' %>"
        >
          Aprovados
        </a>
        <a
          href="/?status=rejected"
          class="filter-btn <%= statusFilter === 'rejected' ? 'filter-btn-active' : '' %>"
        >
          Rejeitados
        </a>
      </div>
    </section>

    <!-- References List -->
    <section class="card">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">
          Referências (<%= references.length %>)
        </h2>
      </div>

      <% if (references.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-50 border-b border-gray-200">
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Título
                </th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Autores
                </th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Ano
                </th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Criado
                </th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Ações
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% references.forEach(reference => { %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-4 py-3">
                    <p class="text-sm font-medium text-gray-900 truncate max-w-xs">
                      <%= reference.titulo %>
                    </p>
                  </td>
                  <td class="px-4 py-3">
                    <p class="text-sm text-gray-700 truncate max-w-xs">
                      <%= reference.autores.join(', ') %>
                    </p>
                  </td>
                  <td class="px-4 py-3">
                    <p class="text-sm text-gray-700">
                      <%= reference.ano %>
                    </p>
                  </td>
                  <td class="px-4 py-3">
                    <%- include('partials/status-badge', { status: reference.status }) %>
                  </td>
                  <td class="px-4 py-3">
                    <p class="text-xs text-gray-600">
                      <%= new Date(reference.createdAt).toLocaleDateString('pt-BR') %>
                    </p>
                  </td>
                  <td class="px-4 py-3">
                    <a
                      href="/reference/edit/<%= reference._id %>"
                      class="text-forest-600 hover:text-forest-700 font-medium text-sm"
                    >
                      Editar
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-12 text-gray-500">
          <p>Nenhuma referência encontrada com status "<%= statusFilter %>".</p>
        </div>
      <% } %>
    </section>

  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6 mt-12">
    <div class="container mx-auto px-4 text-center">
      <p class="text-sm">etnoDB - Base de Dados Etnobotânica</p>
      <p class="text-xs text-gray-400 mt-1">Eduardo Dalcin - 2025/2026</p>
      <p class="text-xs text-gray-400">
        <a href="https://github.com/edalcin/etnoDB" target="_blank" class="hover:text-forest-300">https://github.com/edalcin/etnoDB</a>
      </p>
    </div>
  </footer>

</body>
</html>
