{
  "name": "etnodb",
  "version": "1.0.0",
  "description": "Ethnobotanical Database Web Interface - hierarchical data management for traditional communities and plant knowledge",
  "main": "backend/src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
    "dev:server": "nodemon backend/src/server.js",
    "dev:css": "tailwindcss -i frontend/src/shared/styles/main.css -o frontend/dist/styles/main.css --watch",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i frontend/src/shared/styles/main.css -o frontend/dist/styles/main.css --minify",
    "start": "node backend/src/server.js",
    "test": "jest",
    "test:unit": "jest backend/tests/unit",
    "test:integration": "jest backend/tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint backend/src/**/*.js",
    "lint:fix": "eslint backend/src/**/*.js --fix"
  },
  "keywords": [
    "ethnobotany",
    "traditional-knowledge",
    "botanical-database",
    "HTMX",
    "MongoDB"
  ],
  "author": "etnoDB Contributors",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.33",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
